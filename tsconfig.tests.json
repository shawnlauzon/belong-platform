{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/integration/**/*.ts",
    "tests/integration/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}