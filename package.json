{
  "name": "@belongnetwork/platform",
  "version": "0.1.8",
  "private": false,
  "description": "A platform for building hyper-local community applications with resource sharing, event management, and social features.",
  "type": "module",
  "moduleResolution": "node16",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./providers": {
      "types": "./dist/providers.d.ts",
      "import": "./dist/providers.es.js",
      "require": "./dist/providers.cjs.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.es.js",
      "require": "./dist/hooks.cjs.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.es.js",
      "require": "./dist/types.cjs.js"
    },
    "./database": {
      "types": "./packages/types/src/database.ts"
    }
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/api",
    "packages/types",
    "packages/core"
  ],
  "scripts": {
    "build": "pnpm -r build && vite build --config vite.config.mts && pnpm build:validate",
    "build:validate": "vitest run --config vitest.npm-package.config.mts",
    "test": "pnpm -r --parallel --no-bail test",
    "test:coverage": "pnpm -r --parallel --no-bail test:coverage",
    "test:watch": "pnpm -r --parallel test -- --watch",
    "test:integration": "vitest run --config vitest.integration.config.mts",
    "test:integration:watch": "vitest --config vitest.integration.config.mts",
    "test:acceptance": "vitest run --config vitest.acceptance.config.mts",
    "test:acceptance:watch": "vitest --config vitest.acceptance.config.mts",
    "test:complete": "pnpm test && pnpm test:integration && pnpm test:acceptance",
    "typecheck": "pnpm -r typecheck",
    "typecheck:api": "pnpm --filter=@belongnetwork/platform typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "manypkg": "manypkg check",
    "prepare": "husky install",
    "tdd": "pnpm lint && pnpm typecheck && pnpm test",
    "qa": "pnpm tdd && pnpm build && pnpm test:integration && pnpm test:acceptance",
    "prepublishOnly": "pnpm qa"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@faker-js/faker": "^9.8.0",
    "@manypkg/cli": "^0.24.0",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@vitejs/plugin-react": "^4.5.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "loglevel": "^1.9.2",
    "nanoid": "^5.1.5",
    "prettier": "^3.5.3",
    "react": "18",
    "react-dom": "18",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1",
    "zod": "^3.22.4"
  },
  "packageManager": "pnpm@8.10.0"
}
