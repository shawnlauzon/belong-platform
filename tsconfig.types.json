{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "composite": false,
    "incremental": false,
    "paths": {
      "@belongnetwork/api": ["./packages/api/src"],
      "@belongnetwork/api/*": ["./packages/api/src/*"],
      "@belongnetwork/types": ["./packages/types/src"],
      "@belongnetwork/types/*": ["./packages/types/src/*"],
      "@belongnetwork/core": ["./packages/core/src"],
      "@belongnetwork/core/*": ["./packages/core/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "packages/api/src/**/*",
    "packages/types/src/**/*", 
    "packages/core/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test-utils/**",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}