{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "dist",
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test-utils/**",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}